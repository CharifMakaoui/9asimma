<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.aqua_society.a9asimma.UserInfoActivity">

    <TextView
        android:id="@+id/msg_notif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Done_Message_Notif"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/img_rat"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/msg_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Done_Message"
        android:textAlignment="center"
        android:layout_marginTop="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="24sp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_userName"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/img_rat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:contentDescription="tt"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/msg_done"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:id="@+id/adMobView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
